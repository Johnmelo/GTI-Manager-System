  <script>
    function clickTicketRow(e) {
      if (e.target.nodeName == "TR" || e.target.nodeName == "TD") {
        var requestId = getRowId(e);
        if (requestId) {
          modalConfig = {
            title: "Detalhes do chamado",
            visible_fields: {
                id_chamado_field: true,
                status_field: true,
                cliente_field: true,
                local_field: true,
                servico_field: true,
                data_abertura_field: true,
                data_assumido_field: true,
                data_finalizado_field: true,
                tecnico_abertura_field: true,
                descricao_field: true,
                prazo_field: true,
                parecer_tecnico_field: true,
                tecnico_responsavel_field: true
            }
          };
          let requestData = closedTickets.find(r => r.id_chamado === requestId);
          defineSimpleModal(modalConfig, requestData);
        }
      }
    }
  </script>

  <!-- Table handling -->
  <script>
    function insertInTicketHistoryTable(ticket) {
      let closedTicketsTable = $('#closed-tickets');

      // Row structure
      let newRow = $("<tr>").attr("data-request-id", ticket.id_chamado);
      let cols = "";
      cols += `<td>${ticket.id_chamado}</td>`;
      cols += `<td>${ticket.data_abertura}</td>`;
      cols += `<td>${ticket.data_finalizado}</td>`;
      cols += `<td>${ticket.prazo}</td>`;
      cols += `<td>${ticket.cliente}</td>`;
      cols += `<td>${ticket.servico}</td>`;
      cols += `<td>${ticket.descricao}</td>`;
      cols += `<td>${ticket.parecer_tecnico}</td>`;
      cols += `<td>${ticket.tecnico_abertura}</td>`;
      newRow.append(cols);

      // Events
      $(newRow).on('click', clickTicketRow);

      // Add the row to the table
      closedTicketsTable.append(newRow);
    }
  </script>

  <!-- Ready -->
  <script>
    const populateClosedTicketsTable = () => {
      for (ticket of closedTickets) {
        insertInTicketHistoryTable(ticket);
      }
    };

    $(document).ready(function() {
      // Load the requests for the page
      window.closedTickets = <?php echo json_encode($this->view->closedTickets) ?>;

      // Fill up unopen requests table
      populateClosedTicketsTable();
    });
  </script>
