<!-- ÁREA DO CONTEÚDO -->
<div id="content-area">

    <div id="content-wrapper" class="login-form-view">

        <!-- ÁREA DOS FORMULÁRIOS -->
        <div id="content-form-wrapper">

            <!-- ABAS -->
            <div id="sign-options-wrapper">

                <ul id="botoes-abas" class="no-user-select">
                    <li id="login_tab" class="selected" tabindex="1" role="button"><span>Acesso</span></li>
                    <li id="register_tab" tabindex="2" role="button"><span>Cadastro</span></li>
                </ul>
            </div>

            <!-- FORMULÁRIOS -->
            <div id="forms-wrapper">

                <!-- FORMULÁRIO DE LOGIN -->
                <form id="login-form" class="selected" action="logar" method="post" role="form">

                    <div class="form-input">
                        <i class="fas fa-user" title="Usuário"></i>
                        <input type="text" name="username" id="username" placeholder="Usuário" tabindex="3">
                    </div>

                    <div class="form-input">
                        <i class="fas fa-lock" title="Senha"></i>
                        <input type="password" name="password" id="password" placeholder="Senha" tabindex="4">
                    </div>

                    <!-- <div class="form-input">
                        <input type="checkbox" name="remember" id="remember" value="save_cred" tabindex="5">
                        <label for="remember"><span class="no-user-select">Lembrar meus dados</span></label>
                    </div> -->

                    <div class="form-input">
                        <input type="hidden" name="login_accept" value="login_accept"/>
                        <input type="submit" name="login-submit" id="login-submit" value="Acessar" tabindex="6">
                    </div>
                    <span class="no-user-select"><a href="#" tabindex="7">Esqueci meus dados de acesso</a></span>
                </form>

                <!-- FORMULÁRIO DE CADASTRO -->
                <form id="register-form" action="solicitar_acesso" method="post" role="form">

                    <div class="form-input" action="solicitar_acesso" method="post" role="form">
                        <input type="text" name="nomeCliente" id="nomeCliente" tabindex="3" placeholder="Nome">
                    </div>

                    <div class="form-input">
                        <input type="text" name="loginCliente" id="loginCliente" tabindex="4" placeholder="Usuário">
                    </div>

                    <div class="form-input">
                        <input type="text" name="emailCliente" id="emailCliente" tabindex="5" placeholder="E-mail">
                    </div>

                    <div class="form-input">
                        <input type="text" name="setorCliente" id="setorCliente" tabindex="6" placeholder="Unidade de Lotação">
                    </div>

                    <div class="form-input">
                        <input type="text" name="matriculaCliente" id="matriculaCliente" tabindex="7" placeholder="Matrícula SIAP">
                    </div>

                    <div class="form-input"><input type="submit" name="register-submit" id="register-submit" tabindex="8" value="Solicitar acesso"></div>
                </form>
            </div>
        </div>
    </div>
</div>




<!-- SCRIPTS -->

<!-- jQuery -->
<script src="../App/View/js/jquery.min.js"></script>
