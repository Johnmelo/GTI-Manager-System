<!-- Archive request confirmation -->
<script>
$('#not-processing-requests button[name=btnCancelarSolicitacao]').on('click', function(e) {
  var request_id = [e.target.value];
  var confirm_action = function () {
    $.post("/gticchla/public/cliente/client_cancel_call_request", {
      "request_id_list": request_id,
      "requestType": "open_request"
    })
    .done(function() {
      $('#simple-modal').modal('hide');
      document.location.reload(true);
    })
    .fail(function() {
      alert("Não foi possível realizar a operação");
    });
  };
  setSimpleModalContent("Cancelar solicitação?", "<h4>Tem certeza que deseja cancelar a solicitação de chamado?</h4>", confirm_action, "Cancelar solicitação", "Voltar");
  $('#simple-modal').modal('show');
});
$('form[name=chamados_abertos_clientes] > button[name=cancel-selected-requests]').on('click', function(e) {
  var id_array = [];
  $('form[name=chamados_abertos_clientes]').find('input[type=checkbox]').each(function(){
    if (this.checked) {
      id_array.push(this.value);
    }
  });
  var confirm_action = function () {
    $.post("/gticchla/public/cliente/client_cancel_call_request", {
      "request_id_list": id_array,
      "requestType": "open_request"
    })
    .done(function() {
      $('#simple-modal').modal('hide');
      document.location.reload(true);
    })
    .fail(function() {
      alert("Não foi possível realizar a operação");
    });
  };
  setSimpleModalContent("Cancelar solicitações selecionadas?", "<h4>Tem certeza que deseja cancelar as solicitações de chamado selecionadas?</h4>", confirm_action, "Cancelar solicitações selecionadas", "Voltar");
  $('#simple-modal').modal('show');
});
</script>

<!-- Check if there's request checked -->
<script>

var btn_del_request = $('form[name=chamados_abertos_clientes] > button[name=cancel-selected-requests]');

$('form[name=chamados_abertos_clientes] input').on('ifChecked', function(event) {
  if (btn_del_request.hasClass('btn-default')) {
    btn_del_request.toggleClass('btn-default btn-primary');
    btn_del_request.prop('disabled', function(i, v) { return !v; });
  }
});

$('form[name=chamados_abertos_clientes] input').on('ifUnchecked', function(event) {
  var all_unchecked = true;
  var form_inputs = $('form[name=chamados_abertos_clientes] input[type=checkbox]');

  form_inputs.each(function() {
    if (this.checked) {
      all_unchecked = false;
    }
  });

  if (all_unchecked) {
    btn_del_request.toggleClass('btn-default btn-primary');
    btn_del_request.prop('disabled', function(i, v) { return !v; });
  }
});
</script>
