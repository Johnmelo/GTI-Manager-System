function setSimpleModalContent(title, body, primaryButtonAction, primaryButtonText = "Confirmar", secondaryButtonText = "Cancelar") {
  $('#simple-modal-title')[0].innerHTML = title;
  $('#simple-modal-body')[0].innerHTML = body;
  $('#simple-modal-primary-button')[0].innerHTML = primaryButtonText;
  $('#simple-modal-primary-button').off('click');
