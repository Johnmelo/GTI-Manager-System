<script>
  function checkFormValidity() {
    let servico = $('form[name=solicitar_chamado] input[name=servico]').val().replace(/^\s+/g, '').replace(/\s+$/g, '');
    let local = $('form[name=solicitar_chamado] input[name=local]').val().replace(/^\s+/g, '').replace(/\s+$/g, '');
    let descricao = $('form[name=solicitar_chamado] textarea[name=descricao]').val().replace(/^\s+/g, '').replace(/\s+$/g, '');

    // If at least one is not empty, enable reset button
    if (!servico.match(/^\s*$/) || !local.match(/^\s*$/) || !descricao.match(/^\s*$/)) {
      enableButton($('form[name=solicitar_chamado] button[type=reset]'));
    } else {
      disableButton($('form[name=solicitar_chamado] button[type=reset]'));
    }

    // If all inputs are filled, enable submit button
    if (!servico.match(/^\s*$/) && !local.match(/^\s*$/) && !descricao.match(/^\s*$/)) {
      enableButton($('form[name=solicitar_chamado] button[id=submit-btn]'));
    } else {
      disableButton($('form[name=solicitar_chamado] button[id=submit-btn]'));
    }
  }
  function ticketRequestFormSubmit() {
    // Remove white space excess if any
    let textareaInput = $('form[name=solicitar_chamado] textarea[name=descricao]');
    let descricao = textareaInput.val().replace(/^\s+/g, '').replace(/\s+$/g, '');
    textareaInput.val(descricao);

    // Check if service is valid
    let serviceInput = $("input[name=servico]");
    let service = serviceInput.val();
    let isServiceListed = ((servicos.filter(x => x.value === service)).length > 0);
    if (!isServiceListed) {
      alert("É preciso selecionar uma opção da lista de serviços");
      return false;
    }
    let serviceObj = servicos.find(x => x.value === service);
    let idServico = serviceObj.data.id_servico;

    // Check if locale is valid
    let local = $("input[name=local]").val();
    let isLocaleListed = ((locais.filter(x => x.value === local)).length > 0);
    if (!isLocaleListed) {
      alert("É preciso selecionar uma opção da lista de locais");
      return false;
    }
    let locationObj = locais.find(x => x.value === local);
    let idLocal = locationObj.data.id_local;

    // Remember the location in the browser
    localStorage.setItem("lastLocation", local);

    $("html").css("cursor", "wait");
    $("body").css("pointer-events", "none");

    $.post("/gtic/public/cliente/client_register_call_request",
    {
      "id_servico": idServico,
      "id_local": idLocal,
      "descricao": descricao
    })
    .done(function(response) {
      // Unblock page
      $("html").css("cursor", "auto");
      $("body").css("pointer-events", "auto");

      // Reset the form
      serviceInput.val("");
      textareaInput.val("");

      // Insert the request in the table
      if (response) {
        if (response.request) {
          // Send the ticket request to connected support users
          socket.emit('from client', 'client requested ticket', response.request);

          // Insert the ticket request in the page
          window.activeTicketRequests.push(response.request);
          insertInActiveTicketRequestsTable(response.request);
        } else {
          window.reload(true);
        }
      }
    })
    .fail(function(data) {
      // Unblock page
      $("html").css("cursor", "auto");
      $("body").css("pointer-events", "auto");

      // Notify the error
      if (data && data.responseJSON) {
        let response = data.responseJSON;
        if (response.event === "error") {
          if (response.type === "insuficient_data") {
            alert("Preencha todos os campos do formulário");
            return false;
          } else if (response.type === "db_op_failed") {
            alert("A requisição não pôde ser armazenada no banco de dados");
            return false;
          } else if (response.type === "db_conn_failed") {
            alert("Falha na conexão com o banco de dados");
            return false;
          }
        }
      }
      alert("Houve uma falha não identificada");
    });
  }
  function enableButton(button) {
    button.removeClass("btn-default").addClass("btn-primary");
    button.prop("disabled", false);
  }
  function disableButton(button) {
    button.removeClass("btn-primary").addClass("btn-default");
    button.prop("disabled", true);
  }

  $('form button[type=reset]').on('click', function() {
    disableButton($('form[name=solicitar_chamado] button[type=reset]'));
    disableButton($('form[name=solicitar_chamado] button[id=submit-btn]'));
  });
  $('form button[id=submit-btn]').on('click', ticketRequestFormSubmit);
  $("input[name=servico], textarea[name=descricao], input[name=local]").on('input', checkFormValidity);
</script>

