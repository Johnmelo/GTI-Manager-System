<script>
  function insertInActiveTicketRequestsTable(request) {
    let activeTicketRequestsTable = $('#call-request-list');

    // Row structure
    let newRow = $("<tr>").attr("data-request-id", request.id_solicitacao);

    // Request row info
    let cols = "";
    let date = moment(
      request.data_solicitacao,
      'YYYY-MM-DD HH:mm:ss')
      .format("DD/MM/YYYY");
    cols += `<td>${date}</td>`;
    cols += `<td>${request.servico}</td>`;
    cols += `<td>${request.status}</td>`;
    newRow.append(cols);

    // Cancel request button
    let btnCancelRequest = $(
      `<button type="button"\
      class="btn btn-primary"\
      name="btnCancelarSolicitacao"\
      value="${request.id_solicitacao}">Cancelar</button>`);
    newRow.append($("<td>").append(btnCancelRequest));

    // Events
    $(newRow).on('click', clickRequestRow);
    $(btnCancelRequest).on('click', cancelTicketRequestBtnClick);

    // Add the row to the table
    activeTicketRequestsTable.append(newRow);
  }
</script>

