<script>
  const cancelRequest = (requestId) => {
    // Block the page
    $("html").css("cursor", "wait");
    $("body").css("pointer-events", "none");

    $.post("/gtic/public/cliente/client_cancel_call_request", {
      "request_id": requestId,
      "requestType": "pending_acceptance"
    })
    .done(function(response) {
      // Unblock the page
      $("html").css("cursor", "auto");
      $("body").css("pointer-events", "auto");

      if (response && response.event === "success") {
        if (response.type && response.type === "cancelled_ticket_request") {
          if (response.request){
            let ticketRequest = response.request;
            // Send the ticket request to connected support users
            socket.emit('from client', 'client cancelled ticket request', ticketRequest);

            // Remove the ticket request from the local list
            window.activeTicketRequests = window.activeTicketRequests.filter(
              r => r.id_solicitacao !== ticketRequest.id_solicitacao
            );

            // Remove the ticket request from the table
            $('form[name=solicitacoes_chamado]').find(`[data-request-id=${ticketRequest.id_solicitacao}]`).remove();

            // Hide the modal
            $('#simple-modal').modal('hide');
            return true;
          }
        }
      }
      window.location.reload(true);
    })
    .fail(function(data) {
      // Unblock the page
      $("html").css("cursor", "auto");
      $("body").css("pointer-events", "auto");

      if (data && data.responseJSON) {
        response = data.responseJSON;
        if (response.event && response.type) {
          if (response.event === "error") {
            if (response.type === "missing_data") {
              alert("Há dados fazendo falta");
              $('#simple-modal').modal('hide');
              return false;
            }
          }
        }
      }
      alert("Houve uma falha não identificada");
      window.location.reload(true);
    });
  }
  const cancelTicketRequestBtnClick = (e) => {
    let requestId = e.target.value;
    setSimpleModalContent("Cancelar solicitação?", "<h4>Tem certeza que deseja cancelar a solicitação de chamado?</h4>", cancelRequest.bind(null, requestId), "Cancelar solicitação", "Voltar");
